%h1.header
  Welcome to the Questions Page!

- @questions.each do |question|
  %p
    Score:
    =question.votes.count
  %p=question.title.titleize  
  %p=question.content
  %p
    Written by 
    =question.user.handle.titleize
    Posted
    =time_ago_in_words(question.created_at)
    ago

  = link_to "Edit", edit_question_path(question)
  = link_to "Delete", question_path(question), :method => :delete
  .answers
    - question.answers.each do |answer|
      %p
        Score
        =answer.votes.count
      %p=answer.content
      %p
        Written by
        =answer.user.handle.titleize
        Posted
        =time_ago_in_words(answer.created_at)
        ago
    = link_to "Edit", edit_answer_path(answer)
    = link_to "Delete", answer_path(answer), :method => :delete